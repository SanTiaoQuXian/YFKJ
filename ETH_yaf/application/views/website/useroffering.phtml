        $(function(){
            //立即预约
            $("#popupx").click(function(){
                $("#open").fadeIn();
            });
            $(".cancel").click(function(){
                $("#open").fadeOut();
            });
            //键入其他金额
            $(document).on("keyup",'.body-money',function(){
                let usdt = parseFloat($(".body-money").val());
                if(isNaN(usdt)){
                    usdt = 0;
                }else{
                    usdt = usdt;
                }
                $(".token_type").html(usdt);
                usdt = mul(usdt , 555.55);
                $("#money-num-dyx").text(usdt);
            });
        });
        function mul(a, b) {
            var c = 0;
            var d = a.toString();
            var e = b.toString();
            try {
                c += d.split(".")[1].length;
            } catch (f) {}
            try {
                c += e.split(".")[1].length;
            } catch (f) {}
            return Number(d.replace(".", "")) * Number(e.replace(".", "")) / Math.pow(10, c);
        }
        function reserve(){
            var usdt = parseFloat("<?=$user_usdt?>");
            var input_usdt = parseFloat($("#money-num-open").val());
            var dyx = parseFloat($("#money-num-dyx").text());
            var user = "<?=$user?>";
