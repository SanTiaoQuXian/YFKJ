                layer.msg('剩余最低兑换资金20usdt', {
                    time: 20000, //20s后自动关闭
                    btn: ['充值', '取消'],
                    yes:function () {
                        window.location.href='/user/personalcenter';
                    }
                });
                return false;
            }
            if(input_usdt < 20){
                layer.msg("最低兑换资金20usdt");
                return false;
            }
            $.post("/ajax/ajaxuseroffering",{usdt:usdt,input_usdt:input_usdt,dyx:dyx,user:user},function (msg) {
